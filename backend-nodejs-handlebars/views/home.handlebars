<h1>Book list</h1>
    
<table id="books_table" class="table">
{{#each book}}
	<tr>
		<td>{{title}}</td>
		<td>{{author}}</td>
		<td>{{content}}</td>
		<td><button class="book-del">Delete</button></td>
	</tr>
{{/each}}	
</table>

<h3>Add a new book</h3>
<form>
	<div class="form-group">
		<label for="exampleInputEmail1">Author</label>
		<input type="text" class="form-control" placeholder="" id="new_book_author">
	</div>
	<div class="form-group">
		<label for="exampleInputEmail1">Title</label>
		<input type="text" class="form-control" placeholder="" id="new_book_title">
	</div>
   <div class="form-group">
		<textarea class="form-control" rows="4" placeholder="Content..." id="new_book_content"></textarea>
	</div>
	<button id="add_book" type="submit" class="btn btn-primary">Add a new book</button>
</form>

<p></p>
<p><button id="update_book" class="btn btn-primary">Update the 7th book</button></p>

<p style="height: 300px;"></p>